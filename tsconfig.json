{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
